FROM node:18-alpine

WORKDIR /app

COPY package*.json ./

RUN npm ci --only=production

COPY . .

ARG NEXT_PUBLIC_API_PREFIX
ARG NEXT_PUBLIC_API_SIGN_UP_ENDPOINT
ARG NEXT_PUBLIC_API_SIGN_IN_ENDPOINT
ARG NEXT_PUBLIC_GET_ALL_EXERCISES_ENDPOINT
ARG NEXT_PUBLIC_SERVER_URL
ARG NEXT_PUBLIC_ENABLE_API_CONNECTION

ENV NEXT_PUBLIC_API_PREFIX=$NEXT_PUBLIC_API_PREFIX
ENV NEXT_PUBLIC_API_SIGN_UP_ENDPOINT=$NEXT_PUBLIC_API_SIGN_UP_ENDPOINT
ENV NEXT_PUBLIC_API_SIGN_IN_ENDPOINT=$NEXT_PUBLIC_API_SIGN_IN_ENDPOINT
ENV NEXT_PUBLIC_GET_ALL_EXERCISES_ENDPOINT=$NEXT_PUBLIC_GET_ALL_EXERCISES_ENDPOINT
ENV NEXT_PUBLIC_SERVER_URL=$NEXT_PUBLIC_SERVER_URL
ENV NEXT_PUBLIC_ENABLE_API_CONNECTION=$NEXT_PUBLIC_ENABLE_API_CONNECTION

RUN npm run build

EXPOSE 3000

CMD ["npm", "start"]
